{% extends 'partials/base.html.twig' %}
{% set blog_image = page.media.images[page.header.hero_image] ?: page.media.images|first %}
{% set collection = page.collection() %}
{% set show_breadcrumbs = page.header.show_breadcrumbs|default(true) %}
{% set show_sidebar = page.header.show_sidebar|default(true) %}
{% set show_pagination = page.header.show_pagination|default(true) %}

{% block stylesheets %}
    {% do assets.addCss('theme://css/bricklayer.css') %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% do assets.add('theme://js/bricklayer.min.js') %}
{% endblock %}

{% block hero %}
    <section id="blog-hero" class="section hero {{ page.header.hero_classes }} {{ page.header.background.parallax ? 'parallax' : '' }} {{ page.header.background.parallax ? 'parallax' : '' }}" {% if blog_image %}style="background-image: url({{ blog_image.url }});"{% endif %}>
        <div class="image-overlay"></div>
        <section class="container {{ grid_size }}" style="text-align: {{ page.header.text_align|default('left') }}">
            {{ content }}
        </section>
        <i id="to-start" class="fa fa-angle-down"></i>
    </section>
{% endblock %}

{% block body %}
    <section id="body-wrapper" class="section blog-listing">
        <section class="container {{ grid_size }}">
        {% embed 'partials/layout.html.twig' with {blog: page} %}
            {% block item %}

                {% if show_breadcrumbs and config.plugins.breadcrumbs.enabled %}
                    {% include 'partials/breadcrumbs.html.twig' %}
                {% endif %}

                <div class="bricklayer">
                {% for child in collection %}
                    {% include 'partials/blog-list-item.html.twig' with {blog: page, page: child} %}
                {% endfor %}
                </div>

                {% if show_pagination and config.plugins.pagination.enabled and collection.params.pagination %}
                    <div id="listing-footer">
                        {% include 'partials/pagination.html.twig' with {base_url: page.url, pagination: collection.params.pagination} %}
                    </div>
                {% endif %}

            {% endblock %}

            {% block sidebar %}
                {% include 'partials/sidebar.html.twig' %}
            {% endblock %}
        {% endembed %}
        </section>
    </section>
    <script>
        //Bricklayer
        var bricklayer = new Bricklayer(document.querySelector('.bricklayer'))
    </script>
{% endblock %}



